<BasicDropdown
  @class="popup-menu"
  @horizontalPosition="auto-right"
  @verticalPosition="below"
  as |D|
>
  <D.trigger
    data-test-popup-menu-trigger="true"
    @class={{concat "toolbar-link" (if D.isOpen " is-active")}}
    @tagName="button"
  >
  {{!-- ARG TODO hardcoded --}}
    {{!-- {{replace-dash-forwardslash this.startDate}} - {{replace-dash-forwardslash this.endDate}}  --}}
    Jan 2021 - Apr 2021 
    <Chevron @direction="down" @isButton={{true}} />
  </D.trigger>
  <D.content @class="popup-menu-content calendar-content">
    <nav class="box menu">
      <div class="calendar-title popup-menu-item">Date options</div>  
      <ul class="menu-list">
        <li class="action">
          <button
            class="link link-plain has-text-weight-semibold is-ghost {{if isWrapping "is-loading"}}"
            type="button"
            {{!-- {{on "click" this.handleWrapClick}} --}}
          >
            Current billing period
          </button>
        </li>
        <li class="action">
          <button
            class="link link-plain has-text-weight-semibold is-ghost {{if isWrapping "is-loading"}}"
            type="button"
            {{on "click" this.toggleShowCalendar}}
          >
            <div class="level is-mobile">
              <span class="level-left">Custom end month</span>
              <Chevron class="has-text-grey-light level-right" />
            </div>
          </button>
        </li>
      </ul>
    </nav>
    {{#if this.showCalendar}}
      <div class="calendar-widget-container">
        <div class="select-year">
          <button type="button" class="button is-transparent" disabled={{this.disablePastYear}} {{on "click" this.subYear}}>
            <Chevron @direction="left" @size="s" class="has-text-grey" />
          </button>
          <p>{{this.displayYear}}</p>
          <button type="button" class="button is-transparent padding-right" disabled={{this.disableFutureYear}} {{on "click" this.addYear}}>
            <Chevron @direction="right" @size="s" class="has-text-grey" />
          </button>
        </div>
        <div {{did-insert this.disableMonths}} class="calendar-widget-grid calendar-widget">
          <div {{on "click" this.selectStartMonth}} class="is-month-list" id={{concat "1-" this.displayYear}}>January</div>
          <div {{on "click" this.selectStartMonth}} class="is-month-list" id={{concat "2-" this.displayYear}}>February</div>
          <div {{on "click" this.selectStartMonth}} class="is-month-list" id={{concat "3-" this.displayYear}}>March</div>
          <div {{on "click" this.selectStartMonth}} class="is-month-list" id={{concat "4-" this.displayYear}}>April</div>
          <div {{on "click" this.selectStartMonth}} class="is-month-list" id={{concat "5-" this.displayYear}}>May</div>
          <div {{on "click" this.selectStartMonth}} class="is-month-list" id={{concat "6-" this.displayYear}}>June</div>
          <div {{on "click" this.selectStartMonth}} class="is-month-list" id={{concat "7-" this.displayYear}}>July</div>
          <div {{on "click" this.selectStartMonth}} class="is-month-list" id={{concat "8-" this.displayYear}}>August</div>
          <div {{on "click" this.selectStartMonth}} class="is-month-list" id={{concat "9-" this.displayYear}}>September</div>
          <div {{on "click" this.selectStartMonth}} class="is-month-list" id={{concat "10-" this.displayYear}}>October</div>
          <div {{on "click" this.selectStartMonth}} class="is-month-list" id={{concat "11-" this.displayYear}}>November</div>
          <div {{on "click" this.selectStartMonth}} class="is-month-list" id={{concat "12-" this.displayYear}}>December</div>
        </div>
      </div>
  {{/if}}
  </D.content>
</BasicDropdown>